% boxes
\newenvironment{standardbox}[1][]{%
  \ifstrempty{#1}%
  {\mdfsetup{%
    frametitle={%
      \tikz[baseline=(current bounding box.east),outer sep=0pt]
      \node[anchor=east,rectangle,fill=white]
    {\strut #1};}}
  }%
  {\mdfsetup{%
    frametitle={%
      \tikz[baseline=(current bounding box.east),outer sep=0pt]
      \node[anchor=east,rectangle,fill=structure.fg!70!white,text=white]
    {\strut #1};}}%
  }%
  \mdfsetup{innertopmargin=0pt,innerleftmargin=15pt, innerrightmargin=15pt,
