        \setsansfont{Config Condensed Light}
        #2
        \end{frame}
        }
}

\newcommand{\frameimportantpoint}[1]{
    \begin{frame}[plain]
        \begin{tikzpicture}[overlay, remember picture]
            \node[anchor=center,text width=.8\textwidth] 
            at (current page.center) {
                \setsansfont{Noto Sans Condensed Light}
                    \large \hspace{-0.18cm}#1  
             };
            \end{tikzpicture}
    \end{frame}
}

% execute at begin node=\setlength{\baselineskip}{4ex}

\newcommand{\frameprinciple}[2]{
    \begin{frame}[plain]
        \begin{tikzpicture}[remember picture,overlay]
            \node[anchor=center,text width=.8\textwidth] 
            at (current page.center) {
                \begin{block}{\Large \setsansfont{Noto Sans Condensed Light} \alert{#1}}
                \vspace{0.15cm}
                \setlength{\baselineskip}{2.5ex}
                #2
                \end{block}
              };
          \end{tikzpicture}
    \end{frame}
}


\newcommand{\framequote}[2]{
    \begin{frame}[plain]
        \begin{tikzpicture}[remember picture,overlay]
            \node[anchor=center,text width=.95\textwidth] 
            at (current page.center) {
                \begin{block}{}
                    \begin{quote}
                        \centering
                        #1
                    \end{quote}
                    \begin{flushright}
                        \scriptsize --- #2 $\qquad$ $\qquad$
                    \end{flushright}
                \end{block}
              };
          \end{tikzpicture}
    \end{frame}
}


\newcommand{\myquote}[2]{
    \begin{block}{}
        \hspace{-0.3cm}\begin{quote}
        #1
        \end{quote}
        \begin{flushright}
            \scriptsize --- #2 $\qquad$ $\qquad$
        \end{flushright}
    \end{block}
}


