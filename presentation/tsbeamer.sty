% columns layout
\newcommand{\columnrule}{\vspace{-0.2cm} \\ {\color{gray!50}\rule{\linewidth}{1pt}} \vspace{-0.3cm} \\}

\newcommand{\backgroundimageleft}[2][0.4]{\usebackgroundtemplate{%
\tikz[overlay,remember picture] \node[anchor=west, inner sep=-1, at=(current page.west)] {
    \includegraphics[height=\paperheight,width=#1\paperwidth]{#2}};
}}

\newcommand{\backgroundimageright}[2][0.4]{\usebackgroundtemplate{%
\tikz[overlay,remember picture] \node[anchor=east, inner sep=-1, at=(current page.east)] {
    \includegraphics[height=\paperheight,width=#1\paperwidth]{#2}};
}}


\newcommand{\frameimageleft}[4][0.4]{
        {
        \backgroundimageleft[#1]{#2}
        \begin{frame}{\hspace{#1\linewidth}#3}
            \begin{columns}[T] % align columns  
                \setlength{\mylen}{#1\paperwidth}        
                \begin{column}{\mylen}
                \end{column}%
                \hfill%
                \begin{column}{\dimexpr\paperwidth-\mylen-15pt}
                #4
                \end{column}%
        \end{columns} 
        \end{frame}
        }
    } 

\newcommand{\frameimageright}[4][0.4]{
        {
        \backgroundimageright[#1]{#2}
        \begin{frame}{#3}
            \begin{columns}[T] % align columns  
                \setlength{\mylen}{#1\paperwidth}        
                \begin{column}{\dimexpr\paperwidth-\mylen-35pt}
                #4
                \end{column}%
                \hfill%
                \begin{column}{\mylen}
                \end{column}%
        \end{columns} 
        \end{frame}
        }
    }     

\newcommand{\frametwocolumns}[3]{
    \begin{frame}[t]{#1}
        \vspace{0.25cm}
        \begin{columns}[T] % align columns
                \begin{column}{.5\textwidth}
                #2
                \end{column}%
                \hfill%
                \begin{column}{.5\textwidth}
                #3
                \end{column}%
            \end{columns}
    \end{frame}
}

\newcommand{\framethreecolumns}[4]{
    \begin{frame}[t]{#1}
        \vspace{0.25cm}
        \begin{columns}[T] % align columns
                \begin{column}{.33\textwidth}
                #2
                \end{column}%
                \hfill%
                \begin{column}{.33\textwidth}
                #3
                \end{column}%
                \hfill                
                \begin{column}{.33\textwidth}
                #4
                \end{column}%
            \end{columns}
    \end{frame}
}


\newcommand{\frametitleslide}[2]{
    {
        \usebackgroundtemplate{\includegraphics[width=\paperwidth,height=\paperheight]{#1}}
